{
  "name": "nepenthe-video-manager-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev_direct": "electron electron/main.js",
    "vite:serve": "vite --port 5174",
    "electron:run": "npx electron . --serve --port 5174",
    "electron:serve": "start-server-and-test vite:serve http-get://localhost:5174 electron:run",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.x.x",
    "date-fns": "^3.x.x",
    "electron-store": "^8.2.0",
    "element-plus": "^2.x.x",
    "vue": "^3.x.x",
    "vue-router": "^4.x.x"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.x.x",
    "electron": "^29.1.5",
    "electron-builder": "^24.9.1",
    "start-server-and-test": "^2.0.12",
    "vite": "^5.x.x"
  },
  "build": {
    "appId": "com.nepenthe.videomanager.desktop",
    "productName": "忘忧露",
    "asar": true,
    "directories": {
      "output": "dist_electron",
      "buildResources": "build_resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.idea,.vs,NODE_VERSIONS}"
    ],
    "extraResources": [
      {
        "from": "./dev_backend/nepenthe_backend/", 
        "to": "assets/backend/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/fac.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/fac.ico" 
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/fac.ico" 
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}